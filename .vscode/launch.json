    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'rsat'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=rsat"
                ],
                "filter": {
                    "name": "rsat",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rsat'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rsat",
                    "--package=rsat"
                ],
                "filter": {
                    "name": "rsat",
                    "kind": "bin"
                }
            },
            "args": ["${input:fileArg}"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rsat'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rsat",
                    "--package=rsat"
                ],
                "filter": {
                    "name": "rsat",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "fileArg",
            "type": "promptString",
            "description": "Input file in DIMAC format"
        }
    ]
}